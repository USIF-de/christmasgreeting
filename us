<script>
/* Share Links */
const siteUrl = encodeURIComponent(window.location.href);
const text = encodeURIComponent("üéÑ Merry Christmas & Happy New Year ‚ú®");

fb.href = `https://www.facebook.com/sharer/sharer.php?u=${siteUrl}`;
tw.href = `https://twitter.com/intent/tweet?url=${siteUrl}&text=${text}`;
wa.href = `https://wa.me/?text=${text}%20${siteUrl}`;
tg.href = `https://t.me/share/url?url=${siteUrl}&text=${text}`;
ln.href = `https://www.linkedin.com/sharing/share-offsite/?url=${siteUrl}`;

/* Gift Popup */
function openGift() {
    const popup = document.createElement("div");
    popup.className = "popup";
    popup.innerHTML = `
        <div class="popup-box">
            <h2>Your Gift üéÅ</h2>
            <p>
üéÑ Merry Christmas & Happy New Year üéÜ<br><br>
May this new year bring you new opportunities,<br>
strong motivation, and endless success ‚ú®<br><br>
Believe in yourself, stay focused,<br>
and never stop chasing your dreams üí™üåü
            </p>
            <button onclick="this.closest('.popup').remove()">Close ‚ú®</button>
        </div>
    `;
    document.body.appendChild(popup);
}

/* Snow */
function createSnow() {
    const s = document.createElement("div");
    s.className = "snow";
    s.innerHTML = "‚ùÑ";
    s.style.left = Math.random() * innerWidth + "px";
    s.style.animationDuration = (Math.random()*3+3)+"s";
    document.body.appendChild(s);
    setTimeout(()=>s.remove(),6000);
}
setInterval(createSnow,200);
</script>

